{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "rootDir": "./",
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "app/**/*",
        "core/**/*",
        "server/**/*",
        "plugins/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}
